<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/relay"
    android:layout_height="match_parent">

    <!-- TODO Remove hardcoded values -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="@dimen/relays_margin_left">

        <TextView
            android:id="@+id/gnd"
            style="@style/Relay"
            android:text="@string/gnd"/>

        <TextView
            android:id="@+id/relay_1"
            style="@style/Relay"/>

        <TextView
            android:id="@+id/relay_2"
            style="@style/Relay"/>

        <TextView
            android:id="@+id/relay_3"
            style="@style/Relay"/>

        <TextView
            android:id="@+id/relay_4"
            style="@style/Relay"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="@dimen/relays_margin_left">

        <TextView
            android:id="@+id/relay_5"
            style="@style/Relay"/>


        <TextView
            android:id="@+id/relay_6"
            style="@style/Relay"/>

        <TextView
            android:id="@+id/relay_7"
            style="@style/Relay"/>

        <TextView
            android:id="@+id/relay_8"
            style="@style/Relay"/>
        <TextView
            android:id="@+id/vcc"
            style="@style/Relay"
            android:text="@string/vcc"/>
    </LinearLayout>
</RelativeLayout>